import colorama
from colorama import Fore, Style
from textblob import TextBlob

colorama.init()

print(f"{Fore.MAGENTA}ðŸŒŸðŸ•µï¸â€â™€ï¸ Welcome to Sentiment Spy! ðŸŒŸ{Style.RESET_ALL}")

user_name = input(f"{Fore.CYAN}Please enter your name: {Style.RESET_ALL} ").strip()
if not user_name:
    user_name = "Mystery Agent"

conversation_history = []

print(f"\n{Fore.MAGENTA}Hello, Agent {user_name}!")
print(f"{Fore.MAGENTA}Type a Sentence and I will analyze your sentences with TextBlob and show you the sentiment. ðŸ§ ")
print(f"(Type {Fore.BLUE}'reset'{Fore.MAGENTA}, {Fore.BLUE}'history'{Fore.MAGENTA}, "
      f"{Fore.BLUE}'exit'{Fore.MAGENTA} to quit.){Style.RESET_ALL}\n")

while True:
    user_input = input(f"{Fore.YELLOW}>> {Style.RESET_ALL}").strip()

    if not user_input:
        print(f"{Fore.RED}âš ï¸ Please enter some text or a valid command.{Style.RESET_ALL}")
        continue

    if user_input.lower() == "exit":
        print(f"\n{Fore.CYAN}ðŸ‘‹ Exiting Sentiment Spy. Farewell, Agent {user_name}! {Style.RESET_ALL}")
        break

    elif user_input.lower() == "reset":
        conversation_history.clear()
        print(f"{Fore.GREEN}â™»ï¸ All conversation history cleared!{Style.RESET_ALL}")
        continue

    elif user_input.lower() == "history":
        if not conversation_history:
            print(f"{Fore.RED}No conversation history yet.{Style.RESET_ALL}")
        else:
            print(f"{Fore.BLUE}ðŸ“œ Conversation History:{Style.RESET_ALL}")
            for idx, (text, polarity, sentiment_type) in enumerate(conversation_history, start=1):
                if sentiment_type == "Positive":
                    color = Fore.CYAN
                    emoji = "ðŸ˜Š"
                elif sentiment_type == "Negative":
                    color = Fore.MAGENTA
                    emoji = "ðŸ˜ "
                else:
                    color = Fore.WHITE
                    emoji = "ðŸ˜"
                print(f"{idx}. {color}{emoji} {text} "
                      f"(Polarity: {polarity:.2f}, {sentiment_type}){Style.RESET_ALL}")
        continue

    polarity = TextBlob(user_input).sentiment.polarity
    if polarity > 0.25:
        sentiment_type = "Positive"
        color = Fore.CYAN
        emoji = "ðŸ˜Š"
    elif polarity < -0.25:
        sentiment_type = "Negative"
        color = Fore.MAGENTA
        emoji = "ðŸ˜ "
    else:
        sentiment_type = "Neutral"
        color = Fore.WHITE
        emoji = "ðŸ˜"

    conversation_history.append((user_input, polarity, sentiment_type))

    print(f"{color}{emoji} {sentiment_type} sentiment detected! "
          f"(Polarity: {polarity:.2f}){Style.RESET_ALL}")
